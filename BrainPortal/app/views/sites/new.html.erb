<% title 'Add New Site' %>

<h2>Add New Site</h2>

<%= error_messages_for @site %>

<%= form_tag @site, :id => 'site' do -%>

<%= form_for @site, :as => :site, :url => { :action => "create" }, :datatype => "script" do |f| -%>

  <div class="generalbox">



      <% data = {:append_to => "form_site"} %>
      <%= content_tag :div,
        id: "form_site",
        data: data.to_json do %>
      
          <%= javascript_pack_tag 'views/Sites/components/NewSiteForm' %>
        <% end %>
      



      <div class="display_row">
        <P/>
        <%= f.submit "Create" %>
      </div>
<% end %>
<% end %>
